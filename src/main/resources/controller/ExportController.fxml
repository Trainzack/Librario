            <VBox maxWidth="320.0" minWidth="-Infinity" prefHeight="129.0" prefWidth="278.0" spacing="10.0" styleClass="border">
               <children>
                  <Label styleClass="header2" text="Export Grouping">
                     <graphic>
                        <FontIcon iconLiteral="enty-flow-tree" />
                     </graphic>
                  </Label>
                  <RadioButton mnemonicParsing="false" selected="true" text="One PDF with everything">
                     <toggleGroup>
                        <ToggleGroup fx:id="exportFolderGrouping" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton mnemonicParsing="false" text="One PDF per instrument" toggleGroup="$exportFolderGrouping" />
                  <RadioButton mnemonicParsing="false" text="One PDF per piece grouped by instrument" toggleGroup="$exportFolderGrouping" />
               </children>
            </VBox>
            <VBox maxWidth="416.0" minWidth="-Infinity" prefHeight="129.0" prefWidth="360.0" styleClass="border">
               <children>
                  <Label styleClass="header2" text="Destination">
                     <graphic>
                        <FontIcon iconLiteral="enty-folder" />
                     </graphic>
                  </Label>
                  <HBox prefHeight="25.0" prefWidth="112.0">
                     <children>
                        <TextField fx:id="exportDirectoryTextField" editable="false" prefHeight="25.0" prefWidth="677.0" />
                        <Button maxWidth="87.0" minWidth="87.0" mnemonicParsing="false" onAction="#exportChooseDirectory" prefHeight="25.0" prefWidth="87.0" text="Open Folder" />
                     </children>
                  </HBox>
               </children>
            </VBox>
