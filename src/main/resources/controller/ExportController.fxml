                           <graphic>
                              <FontIcon iconLiteral="enty-man" />
                           </graphic>
                        </Label>
                        <GridPane vgap="10.0">
                           <columnConstraints>
                              <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="110.0" />
                              <ColumnConstraints hgrow="SOMETIMES" maxWidth="224.0" minWidth="10.0" prefWidth="160.0" />
