                              <SearchableComboBox fx:id="exportTargetInstrumentComboBox" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                              <RadioButton fx:id="exportTargetInstrumentToggle" mnemonicParsing="false" text="For Instrument" toggleGroup="$exportPieceTarget" GridPane.rowIndex="2" />
                           </children>
                           <padding>
                              <Insets top="10.0" />
                           </padding>
                        </GridPane>
                     </children>
                  </VBox>
               </children>
            </VBox>
            <VBox maxHeight="257.0" maxWidth="320.0" minHeight="180.0" minWidth="-Infinity" prefHeight="205.0" prefWidth="320.0" styleClass="border">
               <children>
                  <Label styleClass="header2" text="Page Settings">
                     <graphic>
                        <FontIcon iconLiteral="enty-text-document" />
                     </graphic>
                  </Label>
                  <GridPane hgap="5.0">
                    <columnConstraints>
                      <ColumnConstraints halignment="RIGHT" hgrow="NEVER" maxWidth="130.0" minWidth="10.0" prefWidth="45.0" />
                      <ColumnConstraints halignment="CENTER" hgrow="NEVER" maxWidth="211.0" minWidth="10.0" prefWidth="121.0" />
                        <ColumnConstraints halignment="RIGHT" hgrow="ALWAYS" maxWidth="211.0" minWidth="2.0" prefWidth="39.0" />
                        <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" maxWidth="211.0" minWidth="10.0" prefWidth="78.0" />
                    </columnConstraints>
                    <rowConstraints>
